            <UserControl Grid.Row="1">
                <Grid MaxHeight="300">

                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup>
                            <VisualState x:Name="Phone">
                                <VisualState.StateTriggers>
                                    <AdaptiveTrigger MinWindowWidth="0" />
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Target="spMenu.HorizontalAlignment" Value="Right"/>
                                    <Setter Target="spMenu.Orientation" Value="Vertical"/>
                                    <Setter Target="btnSearch.Width" Value="70"/>
                                    <Setter Target="btnView.Width" Value="70"/>
                                    <Setter Target="btnManagement.Width" Value="70"/>
                                    <Setter Target="btnSearch.Height" Value="70"/>
                                    <Setter Target="btnView.Height" Value="70"/>
                                    <Setter Target="btnManagement.Height" Value="70"/>
                                    <Setter Target="tbSearch.Visibility" Value="Collapsed"/>
                                    <Setter Target="tbView.Visibility" Value="Collapsed"/>
                                    <Setter Target="tbManagement.Visibility" Value="Collapsed"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Tablet">
                                <VisualState.StateTriggers>
                                    <AdaptiveTrigger MinWindowWidth="500" />
                                </VisualState.StateTriggers>
                                <VisualState.Setters>
                                    <Setter Target="spMenu.HorizontalAlignment" Value="Center"/>
                                    <Setter Target="spMenu.Orientation" Value="Horizontal"/>
                                    <Setter Target="btnSearch.Width" Value="140"/>
                                    <Setter Target="btnView.Width" Value="140"/>
                                    <Setter Target="btnManagement.Width" Value="140"/>
                                    <Setter Target="btnSearch.Height" Value="140"/>
                                    <Setter Target="btnView.Height" Value="140"/>
                                    <Setter Target="btnManagement.Height" Value="140"/>
                                    <Setter Target="tbSearch.Visibility" Value="Visible"/>
                                    <Setter Target="tbView.Visibility" Value="Visible"/>
                                    <Setter Target="tbManagement.Visibility" Value="Visible"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>

                    <StackPanel x:Name="spMenu" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <StackPanel.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Margin" Value="10"/>
                                <Setter Property="Width" Value="70"/>
                                <Setter Property="Height" Value="70"/>
                            </Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="0 10 0 0"/>
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </Style>
                        </StackPanel.Resources>
                        
                        <Button x:Name="btnSearch" Click="btnSearch_Click">
                            <StackPanel>
                                <SymbolIcon Symbol="Find"/>
                                <TextBlock x:Name="tbSearch" Text="Szukaj" x:DeferLoadStrategy="Lazy"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnView" Click="btnView_Click">
                            <StackPanel>
                                <SymbolIcon Symbol="View"/>
                                <TextBlock x:Name="tbView" Text="Pokaż plan" x:DeferLoadStrategy="Lazy"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnManagement" Click="btnManagement_Click">
                            <StackPanel>
                                <SymbolIcon Symbol="Manage"/>
                                <TextBlock x:Name="tbManagement" Text="Zarządzaj" x:DeferLoadStrategy="Lazy" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </UserControl>

            <StackPanel Grid.Row="2" Margin="10" Orientation="Horizontal">
                <Button x:Name="btnAbout" Width="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="btnAbout_Click">
                    <SymbolIcon Symbol="More"/>
                </Button>
                <Button x:Name="btnSettings" Margin="20 0 0 0" Width="50" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="btnSettings_Click">
                    <SymbolIcon Symbol="Setting"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
